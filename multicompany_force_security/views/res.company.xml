<odoo>
    <data>
        <record model="ir.ui.view" id="res_company_form_view">
            <field name="name">Company user access restrictions</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="priority" eval="30"/>
            <field name="arch" type="xml">
                <data>
                    <group name="social_media" position="after">
                        <group string="Access Restrictions">
                            <field name="only_allow_these_features" groups="base.group_no_one"/>
                        </group>
                    </group>
                </data>
            </field>
        </record>
    </data>
</odoo>
