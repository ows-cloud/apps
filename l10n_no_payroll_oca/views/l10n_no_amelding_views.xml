<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="l10n_no_amelding_view_tree" model="ir.ui.view">
        <field name="name">A-melding</field>
        <field name="model">l10n.no.amelding</field>
        <field name="priority" eval="20" />
        <field name="arch" type="xml">
            <tree string="A-melding" create="0" edit="0">
                <field name="kalendermaaned" />
                <field name="meldingsId" />
                <field name="erstatterMeldingsId" />
                <field name="state" />
                <field name="leveringstidspunkt" />
                <field name="company_id" />
            </tree>
        </field>
    </record>
    <record id="l10n_no_amelding_view_form" model="ir.ui.view">
        <field name="name">A-melding</field>
        <field name="model">l10n.no.amelding</field>
        <field name="priority" eval="20" />
        <field name="arch" type="xml">
            <form string="A-melding" create="0" edit="0">
                <header>
                    <button
                        name="set_state_done"
                        type="object"
                        string="Done"
                        states="new"
                    />
                    <field name="state" widget="statusbar" />
                </header>
                <group colspan="4">
                    <group colspan="2" col="2">
                        <separator string="A-melding" colspan="2" />
                        <field name="kalendermaaned" />
                        <field name="meldingsId" />
                        <field name="erstatterMeldingsId" />
                        <field name="leveringstidspunkt" />
                        <field name="company_id" />
                        <field name="amelding_filename" invisible="1" />
                        <field name="amelding_xml" filename="amelding_filename" />
                        <!-- <field name="amelding" widget="ace" options="{'mode': 'xml'}"/> -->
                    </group>
                </group>
            </form>
        </field>
    </record>
    <record id="l10n_no_amelding_action_tree" model="ir.actions.act_window">
        <field name="name">A-melding</field>
        <field name="res_model">l10n.no.amelding</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
