    <template id="registration_survey_list" name="Registrations">
    <t t-call="website.layout">
        <div id="wrap">
            <div class="oe_structure" />
            <div class="container">


                <div class="row">
                    <div class="col-md-3" />
                    <div class="col-md-6">
                        <center><h4><b>Registering people for <span
                                            t-esc="event.name"
                                        /></b></h4></center>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th class="text-right" width="100">Price</th>
                                    <th><center>Actions</center></th>
                                </tr>
                            </thead>
                            <tbody>
                                <div
                                        t-foreach="attendees"
                                        t-as="attendee"
                                        class="oe_website_overflow_ellipsis mb8"
                                    >
                                    <tr>
                                        <td><span t-esc="attendee['name']" /></td>
                                        <td class="text-right" width="100"><span
                                                    t-esc="attendee['event_registration_total_price']"
                                                /></td>
                                        <td>
                                            <span><a
                                                        t-att-href="attendee['survey_user_input_print_url']"
                                                    ><button
                                                            class="btn btn-default"
                                                            name="see_details"
                                                        >See details</button></a></span>
                                            <span><a
                                                        t-att-href="attendee['survey_user_input_edit_url']"
                                                    ><button
                                                            class="btn btn-default"
                                                            name="edit"
                                                        >Edit</button></a></span>
                                            <span><a
                                                        t-att-href="attendee['survey_user_input_delete_url']"
                                                    ><button
                                                            class="btn btn-default"
                                                            name="delete"
                                                        >Delete</button></a></span>

                                        </td>
                                    </tr>
                                </div>
                                <tr>
                                    <td><a
                                                t-att-href="'/event/%s/register' % (slug(event))"
                                            ><button
                                                    class="btn btn-primary"
                                                    name="register_another_person"
                                                >Register another person</button></a></td>
                                    <td class="text-right" width="100"><b><span
                                                    t-esc="total_price"
                                                /></b></td>
                                    <td>
                                        <a
                                                t-att-href="'/event/%s/registration_survey_list/confirm' % (slug(event))"
                                            ><button
                                                    class="btn btn-primary btn-lg pull-right a-submit"
                                                    name="confirm"
                                                >CONFIRM</button></a>
                                    </td>
                                </tr>
                                <t t-if="error_msg">
                                    <tr><td colspan="3"><b><font color="red"><h4
                                                        >ERROR</h4><span
                                                            t-esc="error_msg"
                                                        /></font></b></td></tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                    <div class="col-md-3" />
                </div>
            </div>
        </div>
    </t>
    </template>

</odoo>
