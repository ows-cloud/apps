<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- event.event -->

		<record model="ir.ui.view" id="view_event_form_ticket_survey_label">
    		<field name="name">Ticket Survey Label</field>
    		<field name="model">event.event</field>
            <field name="inherit_id" ref="event_sale.view_event_form_inherit_ticket"/>
    		<field name="priority" eval="20"/>
    		<field name="groups_id" eval="[(4, ref('group_event_survey'))]"/>
			<field name="arch" type="xml">
				<data>
                    <page name="event_mail_schedule" position="before">
						<page name="registration_survey" string="Registration Survey">
                            <p><br/>Set <b>web?debug</b> in the URL and hover the fields to see details.
                               <br/>Create <b>all tickets</b> before selecting the Question Ticket.
                               <br/>Unselect Survey, Publish the event, Select Survey.</p>
                            <group>
                                <group>
                                    <field name="registration_survey_id" 
                                           options="{'no_create_edit':True}"/>
                                    <field name="registration_partner_id" 
                                           domain="[('country_id','=like','%')]"
                                           options="{'no_create_edit':True}"/>
                                    <field name="registration_name_question_id" 
                                           domain="[('survey_id','=',registration_survey_id), ('type','=','textbox'), ('constr_mandatory','=',True)]" 
                                           options="{'no_create_edit':True}"/>
                                    <field name="registration_email_question_id" 
                                           domain="[('survey_id','=',registration_survey_id), ('type','=','textbox'), ('constr_mandatory','=',True), ('validation_email','=',True)]" 
                                           options="{'no_create_edit':True}"/>
                                    <field name="registration_phone_question_id" 
                                           domain="[('survey_id','=',registration_survey_id), ('type','=','textbox')]" 
                                           options="{'no_create_edit':True}"/>
                                    <field name="registration_ticket_question_id" 
                                           domain="[('survey_id','=',registration_survey_id), ('type','=','simple_choice'), ('constr_mandatory','=',True)]" 
                                           options="{'no_create_edit':True}"/>
                                    <field name="registration_products_question_id" 
                                           domain="[('survey_id','=',registration_survey_id), ('type','in',('simple_choice','multiple_choice','matrix'))]" 
                                           invisible="1"
                                           options="{'no_create_edit':True}"/>
                                    <field name="registration_validation_action_id"
                                           invisible="1"
                                           options="{'no_create_edit':True}"/>
                               </group>
                               <group>
                                    <field name="registration_products_suggested_answer_ids" 
                                           attrs="{'invisible': [('registration_products_question_id','=', False)]}"
                                           nolabel="1">
                                        <tree create="false" editable="bottom">
                                            <field name="sequence" widget="handle"/>
                                            <field name="value" string="Registration Option"/>
                                            <field name="product_id" options="{'no_create_edit':True}"/>
                                            <field name="product_list_price" readonly="1"/>
                                        </tree>
                                    </field>
								</group>
							</group>
						</page>
					</page>

					<xpath expr="//field[@name='event_ticket_ids']/tree" position="inside">
						<field name="survey_question_id" invisible="1"/>
						<field name="survey_label_id"
							   domain="[('question_id','=',survey_question_id)]"
                              
                               options="{'no_create_edit':True}"/>
					</xpath>
				</data>
    		</field>
		</record>
        
        <!-- event.registration -->
        
		<record model="ir.ui.view" id="view_event_registration_form_survey">
    		<field name="name">Attendee Survey</field>
    		<field name="model">event.registration</field>
            <field name="inherit_id" ref="event.view_event_registration_form"/>
    		<field name="priority" eval="20"/>
            <field name="groups_id" eval="[(4, ref('group_event_survey'))]"/>
    		<field name="arch" type="xml">
                <group name="event" position="inside">
                    <field name="survey_user_input_print_url" widget="url"/>
                </group>
    		</field>
		</record>
        
        <!-- survey.question -->

		<record model="ir.ui.view" id="view_survey_form_question">
    		<field name="name">Form view for survey question with product</field>
    		<field name="model">survey.question</field>
            <field name="inherit_id" ref="survey.survey_question_form"/>
            <field name="groups_id" eval="[(4, ref('group_event_survey'))]"/>
    		<field name="priority" eval="20"/>
            <field name="groups_id" eval="[(4, ref('group_event_survey'))]"/>
    		<field name="arch" type="xml">
				<xpath expr="//field[@name='suggested_answer_ids']/tree" position="inside">
                    <field name="product_id"/>
                    <field name="product_list_price" readonly="1"/>
				</xpath>
    		</field>
		</record>
        
        <!-- survey.survey -->

		<record model="ir.ui.view" id="view_survey_form_event_settings">
    		<field name="name">Event Settings</field>
    		<field name="model">survey.survey</field>
            <field name="inherit_id" ref="survey.survey_form"/>
            <field name="groups_id" eval="[(4, ref('group_event_survey'))]"/>
    		<field name="priority" eval="20"/>
    		<field name="arch" type="xml">
				<xpath expr="//notebook" position="inside">
					<page string="Event settings">
					  	<group>
							<group>
								<field name="event_id"/>
							</group>
					  	</group>
					</page>
				</xpath>
    		</field>
		</record>

        <!-- survey.user_input.line (move to module that only depends on survey) -->

        <record model="ir.ui.view" id="view_survey_user_input_line_pivot">
            <field name="name">survey.user_input.line.pivot</field>
            <field name="model">survey.user_input.line</field>
            <field name="groups_id" eval="[(4, ref('group_event_survey'))]"/>
            <field name="mode">primary</field>
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">
                <pivot>

                </pivot>
            </field>
        </record>

        <record model="ir.actions.act_window" id="survey.survey_user_input_line_action">
            <field name="view_mode">tree,form,pivot</field>
        </record>
    </data>
</odoo>
