<?xml version="1.0" encoding="utf-8" ?>

<odoo>

    <record id="view_res_company_currency_form" model="ir.ui.view">
        <field name="name">res.company currency exchange journal and accounts</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form" />
        <field name="arch" type="xml">
            <data>
                <field name="favicon" position="after">
                    <field name="currency_exchange_journal_id" groups="base.group_no_one"/>
                    <field name="income_currency_exchange_account_id" groups="base.group_no_one"/>
                    <field name="expense_currency_exchange_account_id" groups="base.group_no_one"/>
                </field>
            </data>
        </field>
    </record>

</odoo>
