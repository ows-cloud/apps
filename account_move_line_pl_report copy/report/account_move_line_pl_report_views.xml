<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="view_account_move_line_pl_report_pivot">
        <field name="name">account.move.line.pl.report.pivot</field>
        <field name="model">account.move.line.pl.report</field>
        <field name="inherit_id" eval="0" />
        <field name="mode">primary</field>
        <field name="priority" eval="20" />
        <field name="arch" type="xml">
            <pivot string="Journal Items">
                <field name="user_type_id" type="row" />
                <field name="date" type="col" />
                <field name="balance" type="measure" />
            </pivot>
        </field>
    </record>
    <record model="ir.ui.view" id="view_account_move_line_pl_report_graph">
        <field name="name">account.move.line.pl.report.graph</field>
        <field name="model">account.move.line.pl.report</field>
        <field name="inherit_id" eval="0" />
        <field name="mode">primary</field>
        <field name="priority" eval="20" />
        <field name="arch" type="xml">
            <graph type="bar">
                <field name="date" />
                <field name="balance" operator="+" type="measure" />
            </graph>
        </field>
    </record>
    <record model="ir.ui.view" id="view_account_move_line_pl_report_tree">
        <field name="name">account.move.line.pl.report.tree</field>
        <field name="model">account.move.line.pl.report</field>
        <field
            name="groups_id"
            eval="[(4, ref('account.group_account_manager'))]"
        />
        <field name="inherit_id" eval="0" />
        <field name="mode">primary</field>
        <field name="priority" eval="20" />
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="date" />
                <field name="move_id" />
                <field name="journal_id" />
                <field name="name" />
                <field name="partner_id" />
                <field name="account_id" />
                <field name="analytic_account_id" />
                <field name="balance" sum="Total" />
                <field name="company_id" groups="base.group_multi_company" />
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="view_account_move_line_pl_report_form">
        <field name="name">account.move.line.pl.report.form</field>
        <field name="model">account.move.line.pl.report</field>
        <field name="inherit_id" eval="0" />
        <field name="mode">primary</field>
        <field name="priority" eval="20" />
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="date" />
                    <field name="move_id" />
                    <field name="journal_id" />
                    <field name="name" />
                    <field name="partner_id" />
                    <field name="account_id" />
                    <field name="analytic_account_id" />
                    <field name="balance" />
                    <field name="company_id" groups="base.group_multi_company" />
                </group>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="view_account_move_line_pl_report_search">
        <field name="name">account.move.line.pl.report.search</field>
        <field name="model">account.move.line.pl.report</field>
        <field name="inherit_id" eval="0" />
        <field name="mode">primary</field>
        <field name="priority" eval="20" />
        <field name="arch" type="xml">
            <search>
                <field name="analytic_account_id" string="Analytic Account" />
                <field name="user_type_id" />
                <field name="account_id" />

                <filter
                    string="Profit/Loss"
                    name="profit_loss"
                    domain="[('include_initial_balance', '=', False)]"
                />
                <!-- <filter string="Profit/Loss + Equity" name="profit_loss_equity"
                    domain="['|',
                        '&amp;', ('include_initial_balance', '=' ,False),
                                    ('date','&gt;=',(context_today()-relativedelta(months=1)).strftime('%Y-01-01')),
                        '&amp;', ('user_type_id', '=', % ( 'account.data_account_type_equity' ) d),
                                    ('date','&lt;',(context_today()-relativedelta(months=1)).strftime('%Y-01-01'))]"/> -->
                <filter
                    string="Balance"
                    name="balance"
                    domain="[('include_initial_balance', '=', True)]"
                />
                <separator />
                <!--
                <filter
                    string="This Year"
                    name="this_year"
                    domain="[('year','=',time.strftime('%Y'))]"
                />
                <filter
                    string="Last Year"
                    name="last_year"
                    domain="[('year','=',(context_today()-relativedelta(years=1)).strftime('%Y'))]"
                />
                <separator />
                <filter
                    string="Last Month"
                    name="last_month"
                    domain="[('month','=',(context_today()-relativedelta(months=1)).strftime('%m'))]"
                />
                <filter
                    string="Until Last Month"
                    name="until_last_month"
                    domain="[('month','&lt;=',(context_today()-relativedelta(months=1)).strftime('%m'))]"
                />
                -->
                <separator />
                <filter
                    string="R: Account Type"
                    name="row_accounttype"
                    context="{'pivot_row_groupby': ['user_type_id']}"
                />
                <filter
                    string="R: Account Type/Account"
                    name="row_accounttype_account"
                    context="{'pivot_row_groupby': ['user_type_id','account_id']}"
                />
            </search>
        </field>
    </record>
    <record id="action_account_move_line_pl_report" model="ir.actions.act_window">
        <field name="name">Profit/Loss Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.move.line.pl.report</field>
        <field name="view_mode">pivot,graph,tree,form</field>
    </record>
    <menuitem
        id="menu_account_move_line_pl_report"
        name="Profit/Loss Report"
        sequence="21"
        parent="account.account_reports_management_menu"
        action="action_account_move_line_pl_report"
    />
</odoo>
