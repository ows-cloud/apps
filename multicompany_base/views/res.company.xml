<odoo>
    <data>
        <record model="ir.ui.view" id="view_company_form">
            <field name="name">Create company instruction</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="priority" eval="30"/>
            <field name="arch" type="xml">
                <data>
                    <notebook position="inside">
                        <page name="configure" string="Configure">
                            <separator string="Configure"/>
                            <group name="configure" string="Auto-Configure">
                                <button string="Auto-configure company" type="object" name="configure" colspan="2" groups="base.group_no_one"/>
                            </group>
                        </page>
                    </notebook>
                </data>
            </field>
        </record>
    </data>
</odoo>
