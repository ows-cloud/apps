<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_force_security" model="ir.actions.server">
            <field name="name">Force Security</field>
            <field name="model_id" ref="model_multicompany_security"/>
            <field name="sequence">20</field>
            <field name="state">code</field>
            <field name="code">
model.secure()
            </field>
        </record>
        <menuitem id="menu_force_security" name="Force Security" sequence="10" parent="base.menu_security" action="action_force_security"/>

        <record id="action_company_manager_security" model="ir.actions.server">
            <field name="name">Company Manager Security</field>
            <field name="model_id" ref="model_multicompany_security"/>
            <field name="sequence">21</field>
            <field name="state">code</field>
            <field name="code">
model.set_company_manager_security()
            </field>
        </record>
        <menuitem id="menu_company_manager_security" name="Company Manager Security" sequence="10" parent="base.menu_security" action="action_company_manager_security"/>

        <record id="action_force_configure_all_companies" model="ir.actions.server">
            <field name="name">Force configure all companies</field>
            <field name="model_id" ref="model_multicompany_config"/>
            <field name="sequence">22</field>
            <field name="state">code</field>
            <field name="code">
model.configure_system_and_all_companies()
            </field>
        </record>
        <menuitem id="menu_force_config" name="Force configure all companies" sequence="10" parent="base.menu_security" action="action_force_configure_all_companies"/>
    </data>
</odoo>
