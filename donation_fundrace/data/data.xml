<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- SPONSORS AND RUNNERS ENGLISH -->

        <template id="report_donation_fundrace">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                            
                        <h1><span t-field="o.event_id.name"/></h1>
                        <img src="https://web.granheims.no/web/image/4937" alt="FundRace 2018" width="955" height="345"/>
                        <p>   </p>
                        <h2>Dear <span t-field="o.name"/>,</h2>

                        <t t-if="o.runners">
                            <p>Thank you so much for supporting these runners:</p>
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>Runner</th>
                                        <th class="text-center">Runned laps</th>
                                        <th class="text-center">Amount per lap</th>
                                        <th class="text-center">Fixed amount</th>
                                        <th class="text-center">Total amount</th>
                                        <th class="text-center">Currency</th>
                                        <!-- <th class="text-center">Payment</th> -->
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="o.runners" t-as="r">
                                        <td><span t-field="r.runner_id"/></td>
                                        <td class="text-center"><span t-field="r.laps"/></td>
                                        <td class="text-center"><span t-field="r.amount_per_lap"/></td>
                                        <td class="text-center"><span t-field="r.amount_fixed"/></td>
                                        <td class="text-center"><span t-field="r.amount_total"/></td>
                                        <td class="text-center"><span t-field="r.currency_id"/></td>
                                        <!-- <td class="text-center"><span t-field="r.payment"/></td> -->
                                    </tr>
                                    <tr><td> </td><td> </td><td> </td>
                                    <td class="text-center"><b>TOTAL:</b></td>
                                    <td class="text-center"><b><span t-field="o.runners_total_nok"/></b></td>
                                    <td class="text-center"><b>NOK</b></td><td> </td></tr>
                                </tbody>
                            </table>
                            <p><b>Please remember to mark the donation with FUND RACE 2018</b></p>
                            <p>Bank: 1020.07.09654
                            <br/>IBAN: NO82 1020 0709 654
                            <br/>BIC: EIDSNO21XXX</p>
                            <p>PayPal: do the transfer in NOK/SEK/DKK/EUR/GBP to &amp;nbsp;<b>donations@granheims.no</b></p>
                        </t>
                        <t t-if="o.runners and o.sponsors">
                            <p>   </p>                        
                            <hr/>  
                            <p>   </p>  
                        </t>
                        
                        <t t-if="o.sponsors">
                            <p>Thank you so much for running! This is how much people have sponsored you:</p>
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>Sponsor</th>
                                        <th class="text-center">Runned laps</th>
                                        <th class="text-center">Amount per lap</th>
                                        <th class="text-center">Fixed amount</th>
                                        <th class="text-center">Total amount</th>
                                        <th class="text-center">Currency</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="o.sponsors" t-as="s">
                                        <td><span t-field="s.sponsor_id"/></td>
                                        <td class="text-center"><span t-field="s.laps"/></td>
                                        <td class="text-center"><span t-field="s.amount_per_lap"/></td>
                                        <td class="text-center"><span t-field="s.amount_fixed"/></td>
                                        <td class="text-center"><span t-field="s.amount_total"/></td>
                                        <td class="text-center"><span t-field="s.currency_id"/></td>
                                    </tr>
                                    <tr><td> </td><td> </td><td> </td>
                                    <td class="text-center"><b>TOTAL:</b></td>
                                    <td class="text-center"><b><span t-field="o.sponsors_total_nok"/></b></td>
                                    <td class="text-center"><b>NOK</b></td></tr>
                                </tbody>
                            </table>
                        </t>
                        
                    </div>
                </t>
            </t>
        </template>

        <record id="action_report_donation_fundrace" model="ir.actions.report">
            <field name="name">Donation Fundrace Report</field>
            <field name="model">donation.fundrace.partner</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">donation_fundrace.report_donation_fundrace</field>
            <field name="report_file">donation_fundrace.report_donation_fundrace</field>
            <field name="binding_type">report</field>
        </record>

        <record id="mail_template_donation_fundrace_report" model="mail.template">
            <field name="name">Donation Fundrace Report</field>
            <field name="model_id" ref="donation_fundrace.model_donation_fundrace_partner"/>
            <field name="partner_to">${object.partner_id.id}</field>
            <field name="subject">Thank you for supporting the ${object.event_id.name}</field>
            <field name="body_html"><![CDATA[
<div>
    <p>Dear ${object.name},</p>
    <p>Thank you so much for supporting ${object.event_id.name}!</p>
    <p>For more details, see the attachment.</p>
    <p>Best regards,</p>
</div>
<div>
    ${user.signature | safe}
</div>]]></field>
            <field name="report_template" ref="donation_fundrace.action_report_donation_fundrace"/>
            <field name="report_name">Fundrace Report.pdf</field>
        </record>

    </data>
</odoo>