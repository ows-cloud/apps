<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_view_form" model="ir.ui.view">
        <field name="name">ir.ui.view form Create inherited view</field>
        <field name="model">ir.ui.view</field>
        <field name="inherit_id" ref="base.view_view_form" />
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <field name="inherit_children_ids" position="replace">
                <button
                    name="action_add_child_view"
                    string="Create Inherited View"
                    type="object"
                />
                <field
                    name="inherit_children_ids"
                    context="{'default_model':model,'default_type':type,'default_inherit_id':active_id,'default_mode':'extension', 'active_test': False}"
                >
                    <tree default_order="priority,id" decoration-muted="not active">
                        <field name="active" invisible="1" />
                        <field name="id" />
                        <field name="priority" />
                        <field name="name" />
                        <field name="xml_id" />
                        <button
                            name="action_open_child_view"
                            type="object"
                            string="Open"
                            class="float-right btn-secondary"
                        />
                    </tree>
                </field>
            </field>
        </field>
    </record>
</odoo>
