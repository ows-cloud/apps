<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_account_move_line_pivot" model="ir.ui.view">
        <field name="name">account.move.line.pivot balance_pl</field>
        <field name="model">account.move.line</field>
        <field name="mode">primary</field>
        <field name="priority" eval="20" />
        <field name="arch" type="xml">
            <pivot string="Journal Items" sample="1">
                <field name="user_type_id" type="row"/>
                <field name="date" interval="year" type="col"/>
                <field name="balance_pl" type="measure"/>
            </pivot>
        </field>
    </record>
    <record id="view_account_move_line_search" model="ir.ui.view">
        <field name="name">account.move.line.search</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_account_move_line_filter" />
        <field name="priority" eval="20" />
        <field name="arch" type="xml">
            <search>
                <field name="analytic_account_id" string="Analytic Account" />
                <field name="user_type_id" />

                <filter
                    string="Profit/Loss"
                    name="profit_loss"
                    domain="[('include_initial_balance', '=', False)]"
                />
                <!-- <filter string="Profit/Loss + Equity" name="profit_loss_equity"
                    domain="['|',
                        '&amp;', ('include_initial_balance', '=' ,False),
                                    ('date','&gt;=',(context_today()-relativedelta(months=1)).strftime('%Y-01-01')),
                        '&amp;', ('user_type_id', '=', % ( 'account.data_account_type_equity' ) d),
                                    ('date','&lt;',(context_today()-relativedelta(months=1)).strftime('%Y-01-01'))]"/> -->
                <filter
                    string="Balance"
                    name="balance"
                    domain="[('include_initial_balance', '=', True)]"
                />
            </search>
        </field>
    </record>
    <record id="action_account_move_line_pl_report" model="ir.actions.act_window">
        <field name="name">Profit/Loss</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.move.line</field>
        <field name="view_mode">pivot,graph,tree,form</field>
        <field name="view_id" ref="view_account_move_line_pivot" />
        <field name="context">{'search_default_profit_loss': 1}</field>
    </record>
    <menuitem
        id="menu_account_move_line_pl_report"
        name="Profit/Loss"
        sequence="21"
        parent="account.account_reports_management_menu"
        action="action_account_move_line_pl_report"
    />
</odoo>
