<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="base_time_parameter_view_form" model="ir.ui.view">
        <field name="name">base.time.parameter.form button mail.alias</field>
        <field name="model">base.time.parameter</field>
        <field name="inherit_id" ref="base_time_parameter.base_time_parameter_view_form" />
        <field name="arch" type="xml">
            <group position="before">
                <group>
                    <button
                        string="Check the mail aliases after changing the parameter name / code."
                        name="action_view_mail_alias"
                        type="object"
                        class="btn-secondary"
                    />
                </group>
            </group>
        </field>
    </record>

</odoo>
