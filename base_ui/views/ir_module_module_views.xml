<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="module_tree">
        <field name="name">ir.module.module.view.tree</field>
        <field name="model">ir.module.module</field>
        <field name="inherit_id" ref="base.module_tree"/>
        <field name="arch" type="xml">
            <tree position="inside">
                <field name="dependencies_id" widget="many2many_tags" optional="hide"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="ir_module_module_view_search">
        <field name="name">ir.module.module.view.search</field>
        <field name="model">ir.module.module</field>
        <field name="inherit_id" ref="base.view_module_filter"/>
        <field name="arch" type="xml">
            <search position="inside">
                <field name="dependencies_id" />
            </search>
        </field>
    </record>

</odoo>
