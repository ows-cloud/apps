<odoo>
    <record id="view_salary_rule_form" model="ir.ui.view">
        <field name="model">hr.salary.rule</field>
        <field name="inherit_id" ref="payroll.hr_salary_rule_view_form" />
        <field name="arch" type="xml">
            <notebook position="inside">
                <page
                    name="custom_info"
                    string="Custom Information"
                    groups="base_custom_info.group_partner"
                >
                    <group>
                        <group>
                            <field
                                name="custom_info_template_id"
                                options='{"no_quick_create": True}'
                            />
                        </group>
                        <field
                            name="custom_info_ids"
                            colspan="4"
                            nolabel="1"
                            mode="custom_info"
                        />
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
