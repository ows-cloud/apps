<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="view_l10n_no_amelding_wizard_form">
        <field name="name">Lag A-melding</field>
        <field name="model">l10n.no.amelding.wizard</field>
        <field name="priority" eval="20" />
        <field name="arch" type="xml">
            <form string="Lag A-melding">
                <group colspan="4">
                    <group colspan="2" col="2">
                        <separator string="Lag A-melding" colspan="2" />
                        <field
                            name="kalendermaaned"
                            default_focus="1"
                            placeholder="yyyy-mm"
                        />
                        <button
                            name="lag_amelding"
                            type="object"
                            string="Lag A-melding"
                            class="oe_highlight"
                        />
                    </group>
                </group>
            </form>
        </field>
    </record>
    <record
        id="action_l10n_no_amelding_wizard_form"
        model="ir.actions.act_window"
    >
        <field name="name">Lag A-melding</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">l10n.no.amelding.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>
</odoo>
