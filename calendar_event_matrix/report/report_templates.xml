<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_template_calendar_event_matrix">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <t t-foreach="docs" t-as="o">
                    <t t-set="columns" t-value="int(len(o.event_ids) / len(o.row_ids))"/>
                    <table class="table">
                        <thead>
                            <tr>
                                <td><p t-field="o.name"/></td>
                                <t t-set="col" t-value="1"/>
                                <t t-foreach="o.event_ids.sorted(key=lambda ce: [ce.matrix_row_id.sequence, ce.start_date_str])" t-as="ce">
                                    <t t-if="col &lt;= columns">
                                        <td> <p t-field="ce.start_date_str"/> </td>
                                    </t>
                                    <t t-set="col" t-value="col+1"/>
                                </t>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="col" t-value="1"/>
                            <t t-foreach="o.event_ids.sorted(key=lambda ce: [ce.matrix_row_id.sequence, ce.start_date_str])" t-as="ce">
                                <t t-if="col == 1">
                                    &lt;tr&gt;<td><p t-field="ce.matrix_row_id.name"/></td>
                                </t>
                                <td>
                                    <t t-if="ce.partner_ids">
                                        <span t-field="ce.start" t-options='{"format": "HH:mm"}'/>
                                    </t>
                                    <t t-foreach="ce.partner_ids.sorted(key=lambda p: p.name)" t-as="p">
                                        <br/><span t-field="p.name"/>
                                    </t>
                                </td>
                                <t t-if="col == columns">
                                    &lt;&#47;tr&gt;
                                    <t t-set="col" t-value="1"/>
                                </t>
                                <t t-else="">
                                    <t t-set="col" t-value="col+1"/>
                                </t>
                            </t>
                        </tbody>
                    </table>
                </t>
            </t>
        </t>
    </template>
</odoo>