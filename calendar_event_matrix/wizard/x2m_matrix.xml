<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_resource_booking_matrix_wizard" model="ir.ui.view">
        <field name="name">resource.booking.matrix.wizard</field>
        <field name="model">resource.booking.matrix.wizard</field>
        <field name="type">form</field>
        <field name="priority" eval="200"/>
        <field name="arch" type="xml">
            <form>
                <field name="line_ids" widget="x2many_2d_matrix"
                       field_x_axis="start_date" field_y_axis="type_id" field_value="combination_id">
                    <tree>
                        <field name="start_date"/>
                        <field name="type_id"/>
                        <field name="combination_id"/>
                    </tree>
                </field>
            </form>
        </field>
    </record>

    <record model="ir.actions.server" id="action_resource_booking_matrix">
        <field name="name">Resource Booking Matrix</field>
        <field name="model_id" ref="model_resource_booking_matrix_wizard"/>
        <field name="binding_model_id" ref="model_resource_booking_matrix_wizard"/>
        <field name="state">code</field>
        <field name="code">
model._default_line_ids()
action = model._open_matrix()
        </field>
    </record>

    <menuitem
    id="resource_booking_matrix_menu"
    name="Resource Booking Matrix"
    parent="resource_booking.resource_booking_main_menu"
    action="action_resource_booking_matrix"/>

</odoo>
