<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="calendar_attendee_view_tree" model="ir.ui.view">
        <field name="name">calendar.attendee.view.tree</field>
        <field name="model">calendar.attendee</field>
        <field name="type">tree</field>
        <field name="priority" eval="16" />
        <field name="arch" type="xml">
            <tree>
                <field name="event_id" />
                <field name="recurrence_id" />
                <field name="partner_id" />
                <field name="common_name" />
                <field name="state" />
                <field name="availability" />
            </tree>
        </field>
    </record>

    <record id="calendar_attendee_view_form" model="ir.ui.view">
        <field name="name">calendar.attendee.view.form</field>
        <field name="model">calendar.attendee</field>
        <field name="type">form</field>
        <field name="priority" eval="16" />
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="event_id" />
                    <field name="recurrence_id" />
                    <field name="partner_id" />
                    <field name="common_name" />
                    <field name="state" />
                    <field name="availability" />
                </group>
            </form>
        </field>
    </record>

    <record id="calendar_attendee_view_kanban" model="ir.ui.view">
        <field name="name">calendar.attendee.kanban</field>
        <field name="model">calendar.attendee</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="event_id" />
                <field name="recurrence_id" />
                <field name="partner_id" />
                <field name="common_name" />
                <field name="state" />
                <field name="availability" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="row">
                                <div class="col-12">
                                    <strong><t t-esc="record.common_name.value"/></strong>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="calendar_attendee_view_search" model="ir.ui.view">
        <field name="name">calendar.attendee.view.search</field>
        <field name="model">calendar.attendee</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <search>
                <field name="event_id" />
                <group expand="1" string="Group By">
                    <filter string="Calendar Event" name="calendar_event" context="{'group_by': 'event_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_calendar_attendee" model="ir.actions.act_window">
        <field name="name">Calendar Attendee</field>
        <field name="res_model">calendar.attendee</field>
        <field name="view_mode">tree,kanban,form</field>
    </record>

    <menuitem
        id="menu_calendar_attendee"
        name="Attendees"
        parent="calendar.mail_menu_calendar"
        action="action_calendar_attendee"
        groups="group_calendar_event_matrix"
    />

</odoo>
