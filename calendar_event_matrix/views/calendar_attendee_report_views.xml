<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="calendar_attendee_report_view_tree" model="ir.ui.view">
        <field name="name">calendar.attendee.report.view.tree</field>
        <field name="model">calendar.attendee.report</field>
        <field name="type">tree</field>
        <field name="priority" eval="16" />
        <field name="arch" type="xml">
            <tree>
                <field name="partner_id" />
                <field name="event_id" />
                <field name="start_date" />
                <field name="duration" />
            </tree>
        </field>
    </record>

    <record id="calendar_attendee_report_view_form" model="ir.ui.view">
        <field name="name">calendar.attendee.report.view.form</field>
        <field name="model">calendar.attendee.report</field>
        <field name="type">form</field>
        <field name="priority" eval="16" />
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="partner_id" readonly="1" />
                    <field name="event_id" readonly="1" />
                    <field name="start_date" readonly="1" />
                    <field name="duration" readonly="1" />
                    <field name="common_name" readonly="1" />
                    <field name="state" readonly="1" />
                    <field name="availability" readonly="1" />
                    <field name="recurrence_id" readonly="1" />
                </group>
            </form>
        </field>
    </record>

    <record id="calendar_attendee_report_view_kanban" model="ir.ui.view">
        <field name="name">calendar.attendee.report.kanban</field>
        <field name="model">calendar.attendee.report</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="partner_id"/>
                <field name="event_id"/>
                <field name="start"/>
                <field name="duration"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="row">
                                <div class="col-12">
                                  <p>
                                    <strong><t t-esc="record.partner_id.value"/></strong>
                                    <br/>
                                    <span t-esc="record.event_id.value"/>
                                    <br/>
                                    <span t-esc="record.start.value"/>
                                    <br/>
                                    <span t-esc="record.duration.value"/> hours
                                  </p>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record model="ir.ui.view" id="calendar_attendee_report_view_pivot">
        <field name="name">calendar.attendee.report.view.pivot</field>
        <field name="model">calendar.attendee.report</field>
        <field name="priority" eval="20" />
        <field name="arch" type="xml">
            <pivot>

            </pivot>
        </field>
    </record>

    <record id="calendar_attendee_report_view_search" model="ir.ui.view">
        <field name="name">calendar.attendee.report.view.search</field>
        <field name="model">calendar.attendee.report</field>
        <field name="arch" type="xml">
            <search>
                <field name="event_id" />
                <field name="partner_id" />
                <field name="matrix_id" />
                <field name="matrix_row_id" string="Responsibility" />
                <field string="Start Date" name="start_date" filter_domain="[('start_date', '=', self)]"/>
                <!-- <field string="Date" name="create_date" filter_domain="[('start', '=', self), ('stop', '=', self)]"/> -->
                <field string="Start earlest" name="start" filter_domain="[('start', '&gt;=', self)]"/>
                <field string="Stop latest" name="stop" filter_domain="[('stop', '&lt;=', self)]"/>
                <group expand="1" string="Group By">
                    <filter string="Calendar Event" name="calendar_event" context="{'group_by': 'event_id'}"/>
                </group>
                <filter name="today" string="Today" domain="[('start_date','=',context_today().strftime('%Y-%m-%d'))]" />
                <filter name="tomorrow" string="Tomorrow" domain="[('start_date','=',(context_today()+relativedelta(days=1)).strftime('%Y-%m-%d'))]" />
                <filter name="in_2_days" string="In 2 days" domain="[('start_date','=',(context_today()+relativedelta(days=2)).strftime('%Y-%m-%d'))]" />
                <filter name="filter_start_date" string="Start Date" date="start_date" />
            </search>
        </field>
    </record>

    <record id="calendar_attendee_report_action" model="ir.actions.act_window">
        <field name="name">Calendar Attendee Report</field>
        <field name="res_model">calendar.attendee.report</field>
        <field name="view_mode">pivot,kanban,tree,form</field>
    </record>

</odoo>
